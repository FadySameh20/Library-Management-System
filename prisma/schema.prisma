generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id            Int             @id @default(autoincrement())
  title         String
  author        String
  isbn          String          @unique
  quantity      Int
  shelfLocation String?
  bookBorrowerers BookBorrower[]

  @@index([title])
  @@index([author])
}

model Borrower {
  id            Int             @id @default(autoincrement())
  name          String
  email         String          @unique
  registeredDate DateTime       @default(now())
  bookBorrowers BookBorrower[]

  @@index([name])
  @@index([email])
}

model BookBorrower {
  id           Int       @id @default(autoincrement())
  borrower     Borrower  @relation(fields: [borrowerId], references: [id], onDelete: Cascade)
  borrowerId   Int
  book         Book      @relation(fields: [bookId], references: [id], onDelete: Cascade)
  bookId       Int
  checkoutDate DateTime  @default(now())
  dueDate      DateTime
  returnDate   DateTime?

  @@index([dueDate, returnDate])
}
